{
  "manifest_version": 3,
  "name": "Convus",
  "version": "0.5.1",
  "description": "Add a review to Convus for the page you're viewing in your browser",

  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png",
    "256": "images/icon-256.png",
    "512": "images/icon-512.png"
  },

 "permissions": [
    "activeTab",
    "storage"
  ],

  "action": {
    "default_icon": {
      "48": "images/icon-48.png",
      "96": "images/icon-96.png",
      "128": "images/icon-128.png",
      "256": "images/icon-256.png",
      "512": "images/icon-512.png"
    },
    "default_popup": "index.html",
    "default_title": "Convus: review current page"
  },

  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "MacCtrl+Shift+R"
      },
      "description": "__MSG_commandOpenPopup__"
    }
  }
}
