{
  "manifest_version": 2,
  "name": "Convus Reviews",
  "version": "0.4.0",
  "description": "Add a review to Convus for the page you're viewing in your browser",

  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png",
    "256": "images/icon-256.png",
    "512": "images/icon-512.png"
  },

 "permissions": [
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "default_icon": "images/icon-32.png",
    "default_popup": "index.html",
    "default_title": "Convus: review current page"
  },

  "content_scripts": [],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "MacCtrl+Shift+R"
      },
      "description": "__MSG_commandOpenPopup__"
    }
  }
}
