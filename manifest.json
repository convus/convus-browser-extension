{
  "manifest_version": 3,
  "name": "Convus Reviews",
  "version": "0.1",
  "description": "Add reviews to Convus for the page you're viewing",

  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png",
    "256": "images/icon-256.png",
    "512": "images/icon-512.png"
  },

  "action": {
    "default_popup": "popup/index.html"
  },

 "host_permissions": [
    "https://*.convus.org/",
    "http://localhost:3009/"
  ],

 "permissions": [
    "cookies"
  ],

  "content_scripts": []
}
